<p id="notice"><%= notice %></p>

<div class="container">
  <label>Generate Random Codes</label>
  <%= form_tag (secret_codes_path) do %>
    <%= select_tag :count, options_for_select([1,10,20,50,100]), prompt: "select count" %>
    <%= submit_tag "Generate" %>
  <% end %>
</div>

<hr>
  <h3 style = "text-align: center;"> All Secret Codes </h3>
<hr>

<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Code</th>
        <th>email</th>
        <th colspan="3"> Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @secret_codes.each do |secret_code| %>
        <tr>
          <td><%= secret_code.code %></td>
          <td><%= secret_code.user.email  rescue nil %></td>
          <td><%= link_to 'Show', secret_code %></td>
          <td><%= link_to 'Edit', edit_secret_code_path(secret_code) %></td>
          <td><%= link_to 'Destroy', secret_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
